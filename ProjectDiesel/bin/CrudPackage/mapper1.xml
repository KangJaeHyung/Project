<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CrudPackage.mapper1">
	<insert id="insertInform" parameterType="CrudPackage.customer_info">
		insert into pd_cumtomer_info
		values(
		#{user_id},#{password},#{user_name},#{e_mail},#{phone_num},#{country},#{user_cash})
	</insert>
	<select id="selectInform" parameterType="Integer"
		resultType="CrudPackage.customer_info">
		select * from pd_cumtomer_info where user_id =#{user_id}
	</select>
</mapper>